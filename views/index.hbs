<!DOCTYPE HTML>
  <HTML>

<head>
  <link rel="icon" href="images/favicon.png" type="image/png">
  <title>Nuclei - Login</title>
  <!-- Attached CSS-->
  <link rel="stylesheet" type="text/css" href="stylesheets/loginStyle.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <!--Firebase-->
  <script src="https://www.gstatic.com/firebasejs/5.9.3/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/5.9.3/firebase-database.js"></script>
  <script src="https://www.gstatic.com/firebasejs/5.11.1/firebase-auth.js"></script>
  <!-- Attached JS-->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <!-- <script type="text/javascript" src="javascripts/auth.js"></script> -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var modals = document.querySelectorAll('.modal');
      M.Modal.init(modals);
    });

    $(document).ready(function () {
    setTimeout(function () {
        $('#alert').fadeOut();
    }, 5000);
    });
  </script>
<body>
  <div id="alert">
    <h5>{{ message }}</h5>
  </div>
  <h2>Nuclei</h2>

  <div class="main z-depth-3 form1">
		<p class="sign" align="center">Login</p>

		<form id="login-form" method="POST" action="/dashboard">
			<div class="input-field un">
				<input type="email" id="login-email" name="email" required />
				<label for="login-email">Email Address</label>
			</div>
			<div style="margin-bottom: 10px;"></div>
			<div class="input-field pass">
				<input type="password" id="login-password" name="password" required />
				<label for="login-password">Your Password</label>
			</div>
			<p align="center"><button class="btn z-depth-1 submit">login</button></p>
			<p class="forgot" align="center"><a href="#">Forgot Password?</a></p>
			<p class="forgot" align="center"><a href="#" class="modal-trigger" data-target="modal-signup">Sign up</a></p>
		</form>

	</div>

	<!-- SIGN UP MODAL -->
	<div id="modal-signup" class="modal signup">
		<div class="modal-content">
			<h4>Sign up</h4><br />
  			<form id="signup-form" method="POST" action="/">
				<div class="input-field">
					<input type="email" id="signup-email" name="email" required />
					<label for="signup-email">Email Address</label>
				</div>
				<div class="input-field">
					<input type="password" id="signup-password" name="password" required />
					<label for="signup-password">Choose Password</label>
				</div>
        <div class="input-field">
					<input type="password" id="confirm-password" name="confirmPassword" required />
					<label for="signup-password">Confirm Password</label>
				</div>
				<div class="input-field">
					<input type="number" id="signup-osis" name="OSIS" required />
					<label for="signup-osis">Enter OSIS</label>
				</div>
				<button class="btn purple darken-2 z-depth-1">Sign up</button>
			</form>
		</div>
	</div>
</body>

</HTML>
